{
  "name": "synthex-vscode",
  "displayName": "Synthex AI",
  "description": "Your AI-Powered Coding Companion",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "synthex.explainCode",
        "title": "Synthex: Explain Selection"
      },
      {
        "command": "synthex.generateCode",
        "title": "Synthex: Generate Code"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "synthex.explainCode",
          "group": "synthex",
          "when": "editorHasSelection"
        },
        {
          "command": "synthex.generateCode",
          "group": "synthex"
        }
      ]
    },
    "configuration": {
      "title": "Synthex",
      "properties": {
        "synthex.apiUrl": {
          "type": "string",
          "default": "http://localhost:8000/api",
          "description": "URL of the running Synthex API"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/glob": "^8.1.0",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  },
  "dependencies": {
    "axios": "^1.4.0"
  }
}
